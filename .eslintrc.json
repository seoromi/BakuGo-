{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unsafe-innerhtml": "error",
    "no-dangerously-set-innerhtml": "error"
  },
  "plugins": [],
  "globals": {
    "DOMPurify": "readonly",
    "Sanitize": "readonly"
  }
}

